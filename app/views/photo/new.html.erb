<h1>Yearbookr</h1>
<div id="add-photo">
	<h2>Upload a Photo to Your Yearbook</h2>


	<%=form_for @photo, url: root_path, html: { multipart: true} do |f|%>
		<%= f.file_field :avatar%>
		<%= f.label :caption%>
		<%= f.text_field :caption%>
		<%= f.label :note%>
		<%= f.text_field :note%>
		<%=f.submit  %>
	<%end%> 
</div>
	